<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homework16.Homework16MainActivity">

    <EditText
        android:id="@+id/homework16EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/homework16_mainActivity_mainText"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/homework16MainButton"
        style="@style/MyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/homework16_mainActivity_button_text"
        app:layout_constraintEnd_toEndOf="@+id/homework16EditText"
        app:layout_constraintStart_toStartOf="@+id/homework16EditText"
        app:layout_constraintTop_toBottomOf="@+id/homework16EditText" />

</androidx.constraintlayout.widget.ConstraintLayout>